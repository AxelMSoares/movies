{% extends '/layouts/public.twig' %}
{% block title %}Détails du film {{ movie.title }}{% endblock %}

{% block content %}
<div id="details-movie">
    <div class="col">
        <img src="/{{ movie.poster }}" alt="{{ movie.title }}">
    </div>
    <div class="col">
        <h1 class="title-main">{{ movie.title }}</h1>
        <p>{{ movie.synopsis }}</p>

        <ul>
            <li>Date de sortie : {{ movie.date|date('d/m/Y') }}</li>
            <li>Casting : {{ movie.casting }}</li>
            <li>Réalisateur : {{ movie.director }}</li>
            <li>Durée : {{ movie.duration|date('i:s')}}</li>
            <li class="note-press">Note de la presse : {{ movie.note_press }} / 5</li>
        </ul>
    </div>
</div>
{% endblock %}