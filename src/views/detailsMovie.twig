{% extends '/layouts/public.twig' %}
{% block title %}Détails du film {{ movie.title }}{% endblock %}

{% block content %}
<div class="content-bg">
    <div id="details-movie">
        <div class="wrapper">
            <div class="col">
                <img src="/{{ movie.poster }}" alt="{{ movie.title }}">
                <p class="note-press">Note de la presse : {{ movie.note_press }} / 5</p>
            </div>
            <div class="col">
                <h1 class="title-main">{{ movie.title }}</h1>
                <ul>
                    <li class="head">
                        <div>Sortie : {{ movie.date|date('d/m/Y') }}</div>
                        <div>Genres : ...</div>
                    </li>
                    <li>Casting : {{ movie.casting }}</li>
                    <li>Réalisateur : {{ movie.director }}</li>
                    <li class="duration-trailler">
                        <div>Durée : {{ movie.duration|date('i:s')}}</div>
                        <div class="button"><a href="{{ movie.trailer }}" target="_blank" class="trailler">Voir bande annonce</a></div>
                    </li>

                    <li class="synopsis">{{ movie.synopsis }}</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}